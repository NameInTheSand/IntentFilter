<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:id="@+id/btn_open_video"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Open Video Player"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="5dp"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/et_action_one_data"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginHorizontal="5dp"
		app:layout_constraintEnd_toStartOf="@+id/btn_open_video"
		android:layout_marginEnd="5dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/btn_open_video"/>

	<Button
		android:id="@+id/btn_open_audio"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Open Audio Player"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_open_video"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="5dp" />

	<EditText
		android:id="@+id/et_action_two_data"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintBaseline_toBaselineOf="@+id/btn_open_audio"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginHorizontal="5dp"
		app:layout_constraintEnd_toStartOf="@+id/btn_open_audio"
		android:layout_marginEnd="5dp"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>